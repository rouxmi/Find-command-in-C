function test_find_exact_size () {
    if [ ! "$(./ftc $1 "-size" $2)" == "$(find "$1" "-size" "$2" "-type" "f")" ];
    then
        echo "ðŸ”´ Test of find with exact size failed for param \"$2 $3\"" >> detailed_results_$GP
        echo "ðŸ”´ Test non validÃ© pour size" >> recap_result_$GP
        exit 1
    else
        echo "âœ… Test of find with exact size succeeded (file: \"$2\")." >> detailed_results_$GP
    fi
}

test_find_exact_size "arbre" "32c" "arbre/put/trade/explain/suffer/such.mov"

function test_find_size () {
    if [ ! "$(./ftc $1 "-size" $2 | wc -l)" == "$(find "$1" "-size" "$2" "-type" "f" | wc -l)" ];
    then
        echo "ðŸ”´ Test of find with size failed for param \"$2 $3\"" >> detailed_results_$GP
        echo "ðŸ”´ Test non validÃ© pour size" >> recap_result_$GP
        exit 1
    else
        echo "âœ… Test of find with size succeeded (file: \"$2 $3\")." >> detailed_results_$GP
    fi
}

test_find_size "arbre" "-70c"
test_find_size "arbre" "+8k"

echo "âœ… Test validÃ© pour size" >> recap_result_$GP