function test_find_grep () {
    if [ ! "$(./ftc $1 "-ctc" "$2" 2>/dev/null )" == "$(grep "-rl" "$2" "$1"/* 2>/dev/null)"  ];
    then
        echo "ðŸ”´ Test of \"catch the cat\" failed for \"$2\"" >> detailed_results_$GP
        echo "ðŸ”´ Test non validÃ© pour ctc" >> recap_result_$GP
    else
        echo "âœ… Test of \"catch the cat\" succeeded (string: \"$2\")." >> detailed_results_$GP
    fi
}

test_find_grep "arbre" "unit us. Add" "arbre/with.wavs"

function test_find_grep_nb () {
    if [ ! "$(./ftc $1 "-ctc" "$2" 2>/dev/null | wc -l)" == "$(grep "-rl" "$2" "$1"/* 2>/dev/null | wc -l)" ];
    then
        echo "ðŸ”´ Test of \"catch the cat\" failed for \"$2\"" >> detailed_results_$GP
        echo "ðŸ”´ Test non validÃ© pour ctc" >> recap_result_$GP
    else
        echo "âœ… Test of \"catch the cat\" succeeded (string: \"$2\")." >> detailed_results_$GP
    fi
}

test_find_grep_nb "arbre" "Republican"

function test_find_grep_regex () {
    if [ ! "$(./ftc $1 "-ctc" "$2" 2>/dev/null | wc -l)" == "$(grep "-rl" "$2" "$1"/* 2>/dev/null | wc -l)" ];
    then
        echo "ðŸ”´ Test of \"catch the cat\" with regex failed for \"$2\"" >> detailed_results_$GP
        echo "ðŸ”´ Test non validÃ© pour ctc" >> recap_result_$GP
    else
        echo "âœ… Test of \"catch the cat\" with regex succeeded (regex: \"$2\")." >> detailed_results_$GP
    fi
}

test_find_grep_regex "arbre" "mus.*"

