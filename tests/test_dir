function test_find_dir () {
    if [ ! "$(./ftc $1 "-dir" $2 | wc -l)" == "$(find "$1" "-name" "$2" "-type" "d" | wc -l)" ];
    then
        echo "ğŸ”´ Test of find with name failed for file \"$2\"" >> detailed_results_$GP
        echo "ğŸ”´ Test non validÃ© pour dir" >> recap_result_$GP
    else
        echo "âœ… Test of find with name succeeded (file: \"$2\")." >> detailed_results_$GP
    fi
}


test_find_dir "arbre" "sea"
test_find_dir "arbre" "try"

