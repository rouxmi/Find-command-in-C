#!/bin/bash

GP=$1

REQUIRED_FILE="./ftc"

echo "" >> detailed_results_$GP
echo "RÃ©sultats pour regex" >> detailed_results_$GP

if [ ! -f ${REQUIRED_FILE} ] 
then
    echo "âš ï¸ Executable ${REQUIRED_FILE} not found." >> recap_result_$GP
    exit 1
